{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./out",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["../extension/node_modules/@types"]
  },
  "include": ["cli/**/*.ts", "extension/**/*.ts"],
  "exclude": ["out"]
}
