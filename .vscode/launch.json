{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "--disable-restore-windows",
        "--new-window",
        "--user-data-dir=${workspaceFolder}/.vscode/ext-host-user-data",
        "--extensions-dir=${workspaceFolder}/.vscode/ext-host-extensions",
        "${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/extension/out/**/*.js"
      ],
      "preLaunchTask": "npm: compile - extension"
    }
  ]
}
