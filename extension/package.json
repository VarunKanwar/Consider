{
  "name": "consider",
  "displayName": "Consider",
  "description": "Inline bidirectional feedback between developers and AI agents",
  "version": "0.1.0",
  "publisher": "VarunKanwar",
  "license": "MIT",
  "homepage": "https://github.com/VarunKanwar/consider#readme",
  "bugs": {
    "url": "https://github.com/VarunKanwar/consider/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VarunKanwar/consider.git"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.consider/store.json",
    "workspaceContains:.feedback/store.json",
    "onCommand:consider.addComment",
    "onCommand:consider.setupAgentIntegration",
    "onCommand:consider.uninstallAgentIntegration"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "consider.addComment",
        "title": "Add Comment"
      },
      {
        "command": "consider.replyToComment",
        "title": "Reply"
      },
      {
        "command": "consider.resolveThread",
        "title": "Resolve",
        "icon": "$(pass)"
      },
      {
        "command": "consider.unresolveThread",
        "title": "Unresolve",
        "icon": "$(refresh)"
      },
      {
        "command": "consider.copyThreadId",
        "title": "Copy Thread ID",
        "icon": "$(copy)"
      },
      {
        "command": "consider.deleteComment",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "consider.setupAgentIntegration",
        "title": "Consider: Setup"
      },
      {
        "command": "consider.uninstallAgentIntegration",
        "title": "Consider: Uninstall"
      },
      {
        "command": "consider.showAllComments",
        "title": "Consider: Show All Comments"
      },
      {
        "command": "consider.archiveResolved",
        "title": "Consider: Archive Resolved"
      },
      {
        "command": "consider.reconcileAll",
        "title": "Consider: Reconcile All"
      },
      {
        "command": "consider.toggleCommentThreadFromTree",
        "title": "Toggle Thread",
        "icon": "$(collapse-all)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "consider.comments",
          "name": "Consider Comments"
        }
      ]
    },
    "menus": {
      "comments/commentThread/title": [
        {
          "command": "consider.resolveThread",
          "group": "navigation",
          "when": "commentController == consider && commentThread =~ /^consider-thread-open-/"
        },
        {
          "command": "consider.unresolveThread",
          "group": "navigation",
          "when": "commentController == consider && commentThread =~ /^consider-thread-resolved-/"
        },
        {
          "command": "consider.copyThreadId",
          "group": "navigation@2",
          "when": "commentController == consider && !commentThreadIsEmpty"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "consider.addComment",
          "group": "inline",
          "when": "commentController == consider && commentThreadIsEmpty"
        },
        {
          "command": "consider.replyToComment",
          "group": "inline",
          "when": "commentController == consider && !commentThreadIsEmpty && commentThread =~ /^consider-thread-open-/"
        },
        {
          "command": "consider.resolveThread",
          "group": "navigation",
          "when": "commentController == consider && commentThread =~ /^consider-thread-open-/"
        },
        {
          "command": "consider.unresolveThread",
          "group": "navigation",
          "when": "commentController == consider && commentThread =~ /^consider-thread-resolved-/"
        }
      ],
      "comments/comment/title": [
        {
          "command": "consider.deleteComment",
          "group": "inline",
          "when": "commentController == consider"
        }
      ],
      "view/item/context": [
        {
          "command": "consider.toggleCommentThreadFromTree",
          "group": "inline",
          "when": "view == consider.comments && viewItem =~ /consider-comment-/"
        }
      ]
    }
  },
  "scripts": {
    "sync:runtime": "node ./scripts/sync-runtime.js",
    "compile": "npm run sync:runtime && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test:host": "npm run compile && node ./test/runTest.js",
    "test:ui:smoke": "node ./test-ui/runSmoke.js",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^10.8.2",
    "typescript": "^5.3.0",
    "vscode-extension-tester": "^8.22.0"
  }
}
